@model Academico.Models.Departamento

@{
ViewData["Title"] = "Detalhes";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card">
                <div class="card-body">
                    <h1 class="card-title">Detalhes do Departamento</h1>
                    <hr>
                    <div>
                        <h4>Departamento</h4>
                        <hr>
                        <dl class="row">
                            <dt class="col-sm-3">Nome</dt>
                            <dd class="col-sm-9">@Html.DisplayFor(model => model.Nome)</dd>
                        </dl>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Edit" asp-route-id="@Model?.DepartamentoId" class="btn btn-primary">Editar</a>
                        <a asp-action="Index" class="btn btn-link">Voltar a Lista de Departamentos</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>