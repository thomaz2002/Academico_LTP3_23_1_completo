@model Academico.Models.Instituicao

@{
    ViewData["Title"] = "Excluir Instituição";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<h3>Tem certeza que quer deletar?</h3>
<div class="container">
    <h4>Instituicao</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Id) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Id) </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Nome) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Nome) </dd>
        <dt class="col-sm-2"> @Html.DisplayNameFor(model => model.Endereco) </dt>
        <dd class="col-sm-10"> @Html.DisplayFor(model => model.Endereco) </dd>
    </dl>
    <form asp-action="Delete">
        <div class="form-group">
            <input type="submit" value="Confirmar" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-link">Retornar para a listagem de instituições</a>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
